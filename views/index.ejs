    <script src="javascripts/app.js"></script>
    <script src="javascripts/controller.js"></script>
</head>
<body ng-controller="mainCtrl" ng-cloak>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" routerLink="#" style="color: white;"><%= title %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</nav>

<div style="margin: 15px">
    <br>
    <p style="font-weight: bold; font-size: 25px">Welcome to <%= title %></p>
    <br><br>
    <div class="login-page">
        <div class="form">
            <form class="login-form" ng-submit="sub()">
                <h5>Sign Up:</h5>
                <h4>Distributor Details</h4>
                <br>
                <input ng-model="distributor_name" name="distributor_name" placeholder="Distributor Name" required
                       class="form-control"/>
                <input ng-model="distributor_email" name="distributor_email" placeholder="Email" required
                       class="form-control"/>
                <input ng-model="distributor_pass" name="distributor_pass" placeholder="Password" type="password"
                       required class="form-control"/>
                <input ng-model="distributor_pass2" name="distributor_pass2" placeholder="Confirm Password" type="password"
                       required class="form-control"/>
                <input ng-model="distributor_phone" name="distributor_phone" placeholder="Phone" required
                       class="form-control"/>
                <input ng-model="distributor_website" name="distributor_website" placeholder="Website" required
                       class="form-control"/>
                <textarea ng-model="distributor_address" placeholder="Address" rows="8" cols="50" required
                          class="form-control" style="width: 30%"></textarea> <br>
                <h5>Please strictly follow this format to import items:</h5>
                <h5 style="font-weight: bold">Item Name;Packing;Rate;Company Name,</h5>
                <br>
                <input type='file' onchange='openFile(event)'/>
                <p class="ng-cloak err-msg-show">{{msgHide}}</p>
                <input style="padding: 10px; background-color: #000000; font-weight: 300; color: white;"
                       type="submit"
                       value="Submit"/>
            </form>
        </div>
    </div>
    <br>
    <!--New Items-->
    <h4 ng-style="new_item_msg" style="display: none">No New Items</h4>
    <table ng-style="table_newItem" style="display: none" class="table ng-cloak" cellspacing="0" cellpadding="0">
        <thead>
        <h4 ng-style="table_newItem" style="display: none; font-weight: bold">New Items</h4>
        <tr>
            <th>Item Name</th>
            <th>Packing</th>
            <th>Rate</th>
            <th>Company</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="row in itemList">
            <td>{{row.name}}</td>
            <td>{{row.pack}}</td>
            <td>{{row.rate}}</td>
            <td>{{row.company}}</td>
        </tr>
        </tbody>
    </table>
</div>
